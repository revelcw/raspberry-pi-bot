{
  "display": "Node 16",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/types/**"],

  "compilerOptions": {
    "lib": ["es2021"],
    "allowJs": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
